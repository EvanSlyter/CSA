public class MyAge
{
    public static void main(String[] args)
    {
        int age=18;
        System.out.println("My current age is: "+age++);
        System.out.print("My age next year will be: ");
        System.out.println(age--);
        System.out.print("My current age is: ");
        System.out.println(age);
    }
}
